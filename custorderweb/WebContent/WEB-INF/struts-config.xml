<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
    "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<form-bean name="helloWorldForm" type="com.form.CustomerForm" />
	</form-beans>
	<global-forwards>
		 <forward name="abc" path="dosome"/>
	</global-forwards>

	<action-mappings>
		<action input="/index.jsp" path="/helloWorld" type="com.action.CustomerAction"
	name="helloWorldForm" scope="request">
					
			<forward name="success" 
					 path="/second.do" />
		</action>
		
		<action 	
					path="/second" 
					type="com.action.SecondAction"
					name="helloWorldForm" scope="request">
					
			<forward name="success" 
					 path="/index.jsp" />
		</action>
	</action-mappings>
	<message-resources parameter="application" />
</struts-config>